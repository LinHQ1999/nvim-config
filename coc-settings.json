{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "tailwind-lsp": {
            "command": "tailwindcss-language-server.cmd",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "javascript",
                "javascriptreact",
                "typescript",
                "typescriptreact"
            ],
            "rootPatterns": [
                "tailwind.config.js",
                "tailwind.config.ts",
                "postcss.config.js",
                "postcss.config.ts",
                "package.json"
            ],
            "settings": {
                "tailwindCSS": {
                    "validate": true,
                    "lint": {
                        "cssConflict": "warning",
                        "invalidApply": "error",
                        "invalidScreen": "error",
                        "invalidVariant": "error",
                        "invalidConfigPath": "error",
                        "invalidTailwindDirective": "error",
                        "recommendedVariantOrder": "warning"
                    },
                    "classAttributes": [
                        "class",
                        "className",
                        "classList",
                        "ngClass"
                    ],
                    "experimental": {}
                }
            }
        }
    },
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "gosnippets/UltiSnips"
    ],
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",
    "jedi.completion.disableSnippets": false,
    "jedi.jediSettings.autoImportModules": [
        "pandas"
    ],
    "suggest.noselect": true,
    "java.configuration.updateBuildConfiguration": "interactive",
    "java.import.maven.enabled": true,
    //"java.configuration.maven.userSettings": "~/11571/.m2/settings.xml",
    "java.errors.incompleteClasspath.severity": "ignore",
    "html.filetypes": [
        "html",
        "vue",
        "handlebars",
        "template",
        "jsx"
    ],
    "html.format.indentHandlebars": true,
    "javascript.suggest.autoImports": true,
    "go.goplsOptions": {
        "experimentalPostfixCompletions": true
    },
    "go.goplsUseDaemon": true,
    "go.checkForUpdates": "disabled",
    "semanticTokens.filetypes": ["typescriptreact", "typescript", "javascript", "javascriptreact", "lua"],
    "Lua.completion.enable": false,
    "Lua.diagnostics.globals": ["vim"]
}
