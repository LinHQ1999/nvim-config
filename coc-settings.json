{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "args": [
                "-remote=auto",
                "-logfile=auto",
                "-debug=:0",
                "-remote.debug=:0",
                "-rpc.trace"
            ],
            "rootPatterns": [
                "go.mod",
                "go.work",
                ".git/"
            ],
            "filetypes": [
                "go",
                "mod",
                "sum"
            ],
            "initializationOptions": {
                "usePlaceholders": true,
                "gofumpt": false,
                "experimentalPostfixCompletions": true
            }
        },
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".clang-format",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "tailwind-lsp": {
            "command": "tailwindcss-language-server.cmd",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "javascript",
                "javascriptreact",
                "typescript",
                "typescriptreact"
            ],
            "rootPatterns": [
                "tailwind.config.js",
                "tailwind.config.ts",
                "postcss.config.js",
                "postcss.config.ts",
                "package.json"
            ],
            "settings": {
                "tailwindCSS": {
                    "validate": true,
                    "lint": {
                        "cssConflict": "warning",
                        "invalidApply": "error",
                        "invalidScreen": "error",
                        "invalidVariant": "error",
                        "invalidConfigPath": "error",
                        "invalidTailwindDirective": "error",
                        "recommendedVariantOrder": "warning"
                    },
                    "classAttributes": [
                        "class",
                        "className",
                        "classList",
                        "ngClass"
                    ],
                    "experimental": {}
                }
            }
        }
    },
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "gosnippets/UltiSnips"
    ],
    "diagnostic.virtualText": true,
    "diagnostic.enableMessage": "jump",
    "diagnostic.virtualTextPrefix": " ï†ˆ ",
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",
    "jedi.completion.disableSnippets": false,
    "jedi.jediSettings.autoImportModules": [
        "pandas"
    ],
    "suggest.noselect": true,
    "html.filetypes": [
        "html",
        "vue",
        "handlebars",
        "template",
        "jsx"
    ],
    "html.format.indentHandlebars": true,
    "javascript.suggest.autoImports": true,
    "semanticTokens.filetypes": [
        "typescriptreact",
        "typescript",
        "javascript",
        "javascriptreact",
        "lua"
    ],
    "Lua.completion.enable": false,
    "Lua.diagnostics.globals": [
        "vim"
    ]
}
